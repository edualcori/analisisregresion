install.packages("foreign")
require(foreign)
#importar la base de datos
sociodem<-read.dbf("C://Users//8//Desktop//sdemt216.dbf")
sociodem$CLASE1<-factor(sociodem$CLASE1,levels = c(1,2),labels =c("Población Economicamente Activa","Población no economicamente activa") )
table(sociodem$CLASE1)
sociodem$CLASE2<-factor(sociodem$CLASE2,levels = c(1,2,3,4),labels =c("Población Ocupada","Población desocupada","Disponibles","No disponibles") )
table(sociodem$CLASE2)
sociodem$CLASE3<-factor(sociodem$CLASE3,levels = c(1,2,3,4,5,6,7),labels =c("Ocupado Pleno","Ocupado sin pago","Ocupado ausente con nexo laboral","Ocupado ausente con retorno asegurado","Desocupados iniciadores","Desocupados con búsqueda","Desocupados ausentes sin ingreso y sin nexo laboral") )
table(sociodem$CLASE3)
sociodem$POS_OCU<-factor(sociodem$POS_OCU,levels = c(1,2,3,4,5),labels =c("Subordinados","Empleadores","Cuenta propia","Sin pago","NE") )
table(sociodem$POS_OCU)
sociodem$SEG_SOC<-factor(sociodem$SEG_SOC,levels = c(1,2,3),labels =c("Con acceso","Sin acceso","No especificado") )
table(sociodem$SEG_SOC)
sociodem$RAMA<-factor(sociodem$RAMA,levels = c(1,2,3,4,5,6,7),labels =c("Agropecuario","Construcción","Industria Manufacturera","Comercio","Servicios","Otros","No especificado") )
table(sociodem$RAMA)
